<skin>
	<!-- Skin: Slyk Onyx(2017) Version 1 by kiddac : linuxsat-support.com -->
	
        <!-- All graphics, icons, buttons, screens are my own hard work-->
	<!-- If using any elements/graphics from this skin in your own work please reference me correctly -->
	
        <!-- ****************************************************************************************************** -->
	<!-- If you would like to buy me a beer for my efforts please use the paypal links on http://slyk1hd.yolasite.com/ -->
	<!-- ****************************************************************************************************** -->
        
	<output id="0">
		<resolution xres="1280" yres="720" bpp="32" />
	</output>
	
        <!-- includes -->
	        <include filename="/usr/share/enigma2/slyk-onyx/o-main-templates.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-button-templates.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-general.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-wizards.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-menus.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-infopanel.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-movies.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-epg.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-information.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-cccam.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-timers.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-channel-selection.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-infobar.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-eventview.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-plugins.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-network.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-vix.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-toppicks.xml" />
                <include filename="/usr/share/enigma2/slyk-onyx/o-picons.xml" />

	<!-- fonts -->
	<fonts>
		<!-- default skin fonts -->
	        <font name="Subtitlefont"  filename="/usr/share/fonts/nmsbd.ttf" scale="90"/>
		<font name="LCD"           filename="/usr/share/fonts/lcd.ttf" scale="100"/>
		<font name="Replacement"   filename="/usr/share/fonts/ae_AlMateen.ttf"  scale="90" replacement="1"/>

		<!-- slyk1hd fonts -->
	        <font name="Regular" filename="/usr/share/enigma2/slyk-onyx/fonts/MavenPro-Regular.ttf" scale="100" />
 	        <font name="Bold" filename="/usr/share/enigma2/slyk-onyx/fonts/MavenPro-Medium.ttf" scale="100" />
		<font name="Console" filename="/usr/share/enigma2/slyk-onyx/fonts/lucon.ttf" scale="100" />
	
	        <!-- alias -->
		<alias name="Body" font="Regular" size="23" height="28" />
		<alias name="TextNormal" font="Regular" size="20" height="30" />
		
		<!-- context menu -->
		<alias name="ChoiceList" font="Regular" size="20" height="30" />
		
		<!-- plugins -->
		<alias name="PluginBrowser0" font="Regular" size="20" height="25" />        <!-- plugin name -->
		<alias name="PluginBrowser1" font="Regular" size="16" height="21" />        <!-- plugin description -->
		
                <!-- help menus -->
		<alias name="HelpMenuList" font="Regular" size="20" height="30" />
		
                <!-- virtual keyboard -->
		<alias name="VirtualKeyboard" font="Regular" size="26" height="45" />
		
                <!-- used on tuner config - positioner -->
		<alias name="SelectionList" font="Regular" size="20" height="30" />
		
                <!-- locationbox i.e movie file location  -->
		<alias name="FileList" font="Regular" size="20" height="30" />
		<alias name="FileListMulti" font="Regular" size="20" height="30" />	
	</fonts>

	<!-- default colour list -->
	<colors>
		<color name="transparent" value="#ff000000" />
		<color name="black" value="#00000000" />
		<color name="red" value="#00ff0011" />
		<color name="green" value="#307e13" />
		<color name="yellow" value="#00ffff00"/>
		<color name="blue" value="#000064c7"/>
		<color name="white" value="#00ffffff" />
		<color name="zapgreen" value="#00007f0e" />

		<color name="button-bg"                  value="#0f1017" />
		<color name="blackglass"                 value="#4d000000"/> <!-- 90% = 1a000000 / 80% = 34000000 / 70% = 4d000000 / -->
               	<color name="topleft"                    value="#1a1a24" />
	        <color name="topmid"                     value="#414256" />
               	<color name="topright"                   value="#22222e" />
               	<color name="midleft"                    value="#0f0f16" />
               	<color name="mid"                        value="#313040" />
               	<color name="midright"                   value="#07070a" />
               	<color name="botleft"                    value="#0a0b10" />
               	<color name="botmid"                     value="#1d1d27" />
               	<color name="botright"                   value="#0a090e" />
                <color name="bg-selected"                value="#1e1f2b" />
      	 	<color name="bg-selected-text"           value="#006fce" />
       		<color name="tvguidecolor"               value="#57c7ff" /> <!-- 3ab7fe channel selection second colour -->
      	 	<color name="colour2"                    value="#57c7ff" />
	        <color name="notavailable"               value="#555555" />
        	<color name="messageboxbg"               value="#161620" />
        	<color name="titlebackground"            value="#16161e" />
        	
	</colors>
	
	<!-- default colours -->

	<windowstyle type="skinned" id="0">
		<title offset="15,2" font="Bold;23" />
	        <color name="Background" color="#111119" />
	  	<color name="LabelForeground" color="white" />
	        <color name="ListboxBackground" color="#1a1a24" />
	        <color name="ListboxForeground" color="white" />
		<color name="ListboxSelectedBackground" color="bg-selected-text" />
		<color name="ListboxSelectedForeground" color="white" />
		<color name="ListboxMarkedBackground" color="bg-selected-text" />
		<color name="ListboxMarkedForeground" color="red" />
		<color name="ListboxMarkedAndSelectedBackground" color="bg-selected-text" />
		<color name="ListboxMarkedAndSelectedForeground" color="black" />
		<color name="WindowTitleForeground" color="white" />
		<color name="WindowTitleBackground" color="titlebackground" />
	
		<borderset name="bsWindow">
			<pixmap pos="bpTopLeft" filename="screens/b_tl.png" />
			<pixmap pos="bpTop" filename="screens/b_t.png" />
			<pixmap pos="bpTopRight" filename="screens/b_tr.png" />
			<pixmap pos="bpLeft" filename="screens/b_l.png" />
			<pixmap pos="bpRight" filename="screens/b_r.png" />
			<pixmap pos="bpBottomLeft" filename="screens/b_bl.png" />
			<pixmap pos="bpBottom" filename="screens/b_b.png" />
			<pixmap pos="bpBottomRight" filename="screens/b_br.png" />
		</borderset>
	</windowstyle>

	<parameters>
		<!-- <parameter name="ChoicelistDash" value="0,2,650,42"/> -->
	        <!-- <parameter name="ChoicelistName" value="40,3,480,30"/> -->
                <parameter name="ChoicelistIcon" value="10,2,25,25"/>
		<!--	<parameter name="ConfigListSeperator" value="350"/>  -->
		<parameter name="AutotimerEnabledIcon" value="10,2,25,24" />        <!-- Autotimer tick box -->
		<parameter name="AutotimerRecordIcon" value="40,5,20,20" />         <!-- Autotimer Record Icon -->
		<parameter name="VirtualKeyboard" value="45,45" />                  <!-- virtual keyboard keyicon size -->
		
                <parameter name="PluginBrowserIcon" value="10,10,100,40" />          <!-- plugins main icon -->
		<parameter name="PluginBrowserName" value="120,8,30" />             <!-- plugins name -->
		<parameter name="PluginBrowserDescr" value="120,30,20" />           <!-- plugins description -->
		
                <parameter name="PluginBrowserDownloadIcon" value="10,0,42,60" />   <!-- plugins + - boxed icon -->
		<parameter name="PluginBrowserDownloadName" value="62,8,30" />      <!-- plugins download name - see font alias PluginBrowser0 -->
		<parameter name="PluginBrowserDownloadDescr" value="62,30,20" />    <!-- plugins download description -see font alias PluginBrowser1 -->
		<!--
                 <parameter name="HelpMenuListExtHlp0" value="0,0,795,28"/>
		<parameter name="HelpMenuListExtHlp1" value="0,27,795,23"/>
		-->
		<parameter name="HelpMenuListHlp" value="10,4,700,30" />            <!-- help menu text -->
		<parameter name="SelectionListDescr" value="50,2,750,30" />
		
                <!-- used on tuner config - positioner -->
		<parameter name="SelectionListLock" value="10,2,25,24" />
		<parameter name="SelectionListLockOff" value="10,2,25,24" />
		
                <!-- example is software management - backup list -->
		<parameter name="FileListName" value="40,0,578,30" />
		<parameter name="FileListIcon" value="10,3,25,24" />
		<parameter name="FileListMultiName" value="75,0,548,30" />
		<parameter name="FileListMultiIcon" value="40,2,25,24" />
		<parameter name="FileListMultiLock" value="10,2,25,24" />

	</parameters>

</skin>


