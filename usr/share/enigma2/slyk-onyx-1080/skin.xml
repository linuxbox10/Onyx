		<parameter name="HelpMenuListHlp" value="15,14,942,72" />            <!-- help menu text -->
                <parameter name="HelpMenuListExtHlp0" value="15,2,942,42"/>
		<parameter name="HelpMenuListExtHlp1" value="0,42,942,42"/>
		
                <parameter name="PluginBrowserIcon" value="15,15,150,60" />          <!-- plugins main icon -->
		<parameter name="PluginBrowserName" value="180,12,45" />             <!-- plugins name -->
		<parameter name="PluginBrowserDescr" value="180,45,30" />           <!-- plugins description -->
                <parameter name="PluginBrowserDownloadIcon" value="15,0,63,90" />   <!-- plugins + - boxed icon -->
