		<parameter name="PluginBrowserDownloadDescr" value="93,47,30" />    <!-- plugins download description -see font alias PluginBrowser1 -->
	
	        <!-- information - services -->
		<parameter name="ServiceInfo" value="0,0,450,45" />
                <parameter name="ServiceInfoLeft" value="0,0,450,38" />
                <parameter name="ServiceInfoRight" value="450,0,900,38" />

                <!-- used on tuner config - positioner -->
		<parameter name="SelectionListDescr" value="66,3,863,45" />
		<parameter name="SelectionListLock" value="15,3,38,36" />
		<parameter name="SelectionListLockOff" value="15,3,38,36" />
		
		<parameter name="VirtualKeyboard" value="68,68"/>
